{
  "name": "my-custom-lang",
  "displayName": "My Custom Lang",
  "description": "Extensi√≥n para un lenguaje inventado",
  "version": "0.0.1",
  "publisher": "me",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:mylang"
  ],
  "contributes": {
    "languages": [
      {
        "id": "mylang",
        "aliases": [
          "MyLang"
        ],
        "extensions": [
          ".mylang"
        ],
        "configuration": "../language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mylang",
        "scopeName": "source.mylang",
        "path": "../syntaxes/mylang.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -b",
    "watch": "tsc -b --watch"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "vscode": "^1.1.37",
    "vscode-languageclient": "^8.1.0"
  }
}