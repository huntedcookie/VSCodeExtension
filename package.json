{
  "name": "my-custom-lang",
  "displayName": "My Custom Language",
  "description": "Un lenguaje inventado de ejemplo",
  "version": "0.0.2",
  "publisher": "tupublisher",
  "engines": {
    "vscode": "^1.82.0"
  },
  "activationEvents": [
    "onLanguage:mylang"
  ],
  "main": "./out/client/extension.js",
  "contributes": {
    "configuration": {
      "title": "MyLang",
      "properties": {
        "mylang.enableAutoFormat": {
          "type": "boolean",
          "default": true,
          "description": "Habilitar el autoformateo al guardar documentos de MyLang"
        }
      }
    },
    "configurationDefaults": {
      "[mylang]": {
        "editor.formatOnSave": true
      }
    },
    "languages": [
      {
        "id": "mylang",
        "aliases": [
          "MyLang",
          "mylang"
        ],
        "extensions": [
          ".mylang"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mylang",
        "scopeName": "source.mylang",
        "path": "./syntaxes/mylang.tmLanguage.json"
      }
    ],
    "semanticTokenTypes": [
      {
        "id": "directiveInclude",
        "superType": "keyword",
        "description": "Include directive, same color as #include"
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "mylang",
        "scopes": {
          "directiveInclude": [
            "keyword.control.directive.include"
          ]
        }
      }
    ]
  },
  "scripts": {
    "compile": "tsc -b client server",
    "watch": "tsc -b client server -w"
  },
  "devDependencies": {
    "typescript": "5.3.3",
    "@types/node": "18.0.0",
    "@types/vscode": "1.82.0"
  },
  "dependencies": {
    "vscode-languageclient": "8.1.0",
    "vscode-languageserver": "8.1.0",
    "vscode-languageserver-textdocument": "1.0.8"
  }
}